<UserControl x:Class="FKFZ.Controls.SliderProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseEnter="UserControl_MouseEnter_1"  MouseLeave="UserControl_MouseLeave_1">
    <Grid>
        <ProgressBar Name="Progress" VerticalAlignment="Center" Margin="10,0,10,0" 
                     Style="{DynamicResource SimpleProgressBar}" Value="{Binding ElementName=mSlider,Path=Value}"/>
        <!-- -->
        <Slider Name="mSlider" VerticalAlignment="Center" Margin="10,0,10,0" FocusVisualStyle="{x:Null}" Style="{DynamicResource Slider_CustomStyle2}" 
             />
    </Grid>
</UserControl>
